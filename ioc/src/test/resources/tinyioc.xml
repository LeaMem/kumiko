<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="beanInitializeLogger" class="com.lea.tinyioc.BeanInitializeLogger">
    </bean>

    <bean id="outputService" class="com.lea.tinyioc.OutputServiceImpl">
    </bean>

    <bean id="helloWorldService" class="com.lea.tinyioc.HelloWorldServiceImpl">
        <property name="text" value="Hello World!"/>
        <property name="outputService" ref="outputService"/>
    </bean>

    <bean id="timeInterceptor" class="com.lea.tinyioc.aop.TimerInterceptor"></bean>

    <bean id="autoProxyCreator" class="com.lea.tinyioc.aop.AspectJAwareAdvisorAutoProxyCreator"></bean>

    <bean id="aspectjAspect" class="com.lea.tinyioc.aop.AspectJExpressionPointcutAdvisor">
        <property name="advice" ref="timeInterceptor"></property>
        <property name="expression" value="execution(* us.codecraft.tinyioc.*.*(..))"></property>
    </bean>

</beans>
